{
  "name": "Offline-Audio-Player",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app.js",
  "scripts": {
    "test": "jest",
    "standard": "standard",
    "build": "gulp build && npm run build_worker",
    "serve": "pushstate-server ./ 3000",
    "build_worker": "babel ./js/utils/worker-es6.js --out-file ./js/utils/worker.js",
    "minify": "uglifyjs --screw-ie8 ./dist/app.js > ./dist/app.min.js && uglifyjs --screw-ie8 ./js/utils/worker.js > ./js/utils/worker.min.js",
    "deploy": "npm run wipe_www && npm run copy_to_www && surge www",
    "wipe_www": "rm -r www",
    "copy_to_www": "mkdir www && cp -R array-from.js blob-util.js blob-util.min.js bluebird.js bluebird.min.js CNAME dist fonts id3js.js id3js.min.js images index.html js pouchdb.js pouchdb.min.js runtime.js runtime.min.js style.css www"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "blob-util": "^1.1.1",
    "bluebird": "^2.9.6",
    "es6-promise": "^2.0.1",
    "flux": "^2.0.1",
    "id3_reader": "^1.0.0",
    "id3js": "^1.1.3",
    "install": "^0.1.8",
    "lodash": "^3.1.0",
    "npm": "^2.4.1",
    "pouchdb": "^3.2.1",
    "react": "^0.12.2",
    "react-dnd": "^0.6.2",
    "react-router": "^0.12.4",
    "string.prototype.startswith": "^0.2.0",
    "underscore": "^1.7.0"
  },
  "devDependencies": {
    "6to5": "^3.6.0",
    "6to5-browserify": "^1.3.0",
    "6to5ify": "^3.1.2",
    "babel": "^4.6.3",
    "babelify": "^5.0.3",
    "browser-sync": "^1.7.1",
    "browserify": "^6.3.3",
    "gulp": "^3.8.11",
    "gulp-babel": "^4.0.0",
    "gulp-rename": "^1.2.0",
    "lodash": "^2.4.1",
    "pushstate-server": "^1.5.0",
    "rimraf": "~2.2.8",
    "standard": "^3.2.0",
    "vinyl-source-stream": "^1.0.0",
    "watchify": "^2.1.1"
  },
  "standard": {
    "ignore": [
      "dist/**",
      "id3js.js",
      "blob-util.js",
      "bluebird.js",
      "pouchdb.js",
      "runtime.js",
      "js/utils/worker.js",
      "www/**",
      "array-from.js"
    ]
  }
}
